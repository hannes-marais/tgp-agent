# Environment Variables Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (optional - for OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional - for Anthropic provider)  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
PORT=3001

# EMRouter Configuration
EMROUTER_ENDPOINT=http://localhost:8123
EMROUTER_API_KEY=your-emrouter-api-key-here

# Frontend Configuration
VITE_PORT=3000
VITE_BACKEND_URL=http://localhost:3001

# App Authentication
APP_PIN_CODE=7893

# Model Names
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-haiku-20240307
EMROUTER_BRUCE_MODEL=bruce-cleveland
EMROUTER_EMMA_MODEL=emma

# Logging
LOG_FILE=/tmp/tgp-agent.log
